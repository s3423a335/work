商數餘數

c
===============================================================
  printf("請輸入一個整數\n");
	int a; 
	scanf("%d",&a);	
	printf("此數除以五的商數:%d 餘數%d",(a/5),(a%5));
	system("pause");
	return 0;
================================================================
c++
================================================================
  int n ;
	cout << "輸入一正整數: "; 
	cin >> n;
	cout << "此數除以五的\n商數 = " << n / 5 << "\n餘數 = " << n % 5; 
	return 0;
================================================================
java
================================================================
    System.out.println("請輸入一個整數");
		Scanner input = new Scanner(System.in);
		int a = input.nextInt();
		System.out.println("此數除以五的商數:"+(a/5)+" 餘數:"+(a%5));
